{
  "name": "天猫茅台",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "茅台天猫版本",
  "icons": {
    "16": "images/mt16.png",
    "48": "images/mt48.png"
  },
  "browser_action": {
    "default_title": "茅台抢脚本",
    "default_icon": "images/mt16.png",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "js": [
      "scripts/jquery-1.7.1.min.js",
      "scripts/content.js"
    ],
    "matches": [
      "http://*.taobao.com/*",
      "https://*.taobao.com/*",
      "https://*.tmall.com/*"
    ],
    "run_at": "document_idle"
  }],
  "permissions": [
    "http://*.taobao.com/*",
    "https://*.taobao.com/*",
    "https://*.tmall.com/*",
    "contextMenus",
    "tabs",
    "notifications",
    "webRequestBlocking",
    "storage"
  ]
}
